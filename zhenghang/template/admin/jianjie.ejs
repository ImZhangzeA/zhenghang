<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Document</title>
    <link href="themes/default/css/umeditor.css" type="text/css" rel="stylesheet">
    <script type="text/javascript" src="third-party/jquery.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="umeditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="umeditor.min.js"></script>
    <script type="text/javascript" src="lang/zh-cn/zh-cn.js"></script>
    <link rel="stylesheet" type="text/css" href="css/reset.css">
    <link rel="stylesheet" type="text/css" href="css/css.css">
    <style type="text/css">
        h2{
            text-align:center;
            width: 1100px;
            margin:50px auto;
            height: 50px;
            line-height:50px;
            border-bottom:1px solid #ccc;
        }
        .box{
            width: 1100px;
            height:auto;
            margin:0 auto;
            display:flex;
            justify-content:center;
        }
        .rbox{
            width: 900px;
            height: 420px;
        }
        .lbox{
            width: 200px;
            display:flex;
            justify-content:center;
            align-items: center;
            flex-wrap: wrap;
        }
        .lbox a{
            display:block;
            text-decoration:none;
            width: 200px;
            height: 60px;
            line-height:60px;
            text-align:center;
            font-size:30px;
            color:#888;
        }
        .lbox a:hover{
            background:#97C8FD;
        }
        .lbox a.first{
            background:#97C8FD;
        }
    </style>
</head>
<body>
    <h2>后台管理界面</h2>
    <div class="box">
        <div class="lbox">
            <a href="/frticle">banner管理</a>
            <a href="/grticle">company管理</a>
            <a href="/hrticle" class="first">简介管理</a>
            <a href="/irticle">用户信息管理</a>
            <a href="/grticle">管理员管理</a>
            <a href="/krticle">news管理</a>
        </div>
        <div class="rbox">
            <div class="new">
                <script type="text/plain" id="myEditor" style="width:1000px;height:240px;">
                    <p><%- conts.index_con %></p>
                </script>
                <div id="btns">
                    <table>
                        <tr>
                            <td>
                                <button class="btn" onclick="getPlainTxt()">修改</button>&nbsp;
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
<div class="clear"></div>

<div>
    <h3 id="focush2"></h3>
</div>
<script type="text/javascript">
    //实例化编辑器
    var um = UM.getEditor('myEditor');
    um.addListener('focus',function(){
        $('#focush2').html('')
    });
    // um.execCommand('insertHtml','')

    function getPlainTxt() {
        $.ajax({
            url: '/adindexC',
            type: 'POST',
            dataType: 'JSON',
            data: {jj:UM.getEditor('myEditor').getPlainTxt()},
            success:function(data){
                if(data.ok == true){
                    window.location.reload();
                    alert('修改成功');
                }
            }
        });
        // var arr = [];
        // arr.push(UM.getEditor('myEditor').getPlainTxt());
        // alert(arr.join('\n'))
    }
</script>

</body>
</html>