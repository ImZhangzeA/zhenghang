<!DOCTYPE HTML>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
    <title>UMEDITOR 完整demo</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link href="themes/default/css/umeditor.css" type="text/css" rel="stylesheet">
    <script type="text/javascript" src="third-party/jquery.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="umeditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="umeditor.min.js"></script>
    <script type="text/javascript" src="lang/zh-cn/zh-cn.js"></script>
    <link rel="stylesheet" type="text/css" href="css/reset.css">
    <link rel="stylesheet" type="text/css" href="css/css.css">
    <style type="text/css">
        h2{
            text-align:center;
            width: 1100px;
            margin:50px auto;
            height: 50px;
            line-height:50px;
            border-bottom:1px solid #ccc;
        }
        .box{
            width: 1100px;
            height:auto;
            margin:0 auto;
            display:flex;
            justify-content:center;
        }
        .rbox{
            width: 900px;
            height: 420px;
        }
        .lbox{
            width: 200px;
            display:flex;
            justify-content:center;
            align-items: center;
            flex-wrap: wrap;
        }
        .lbox a{
            display:block;
            text-decoration:none;
            width: 200px;
            height: 60px;
            line-height:60px;
            text-align:center;
            font-size:30px;
            color:#888;
        }
        .lbox a:hover{
            background:#97C8FD;
        }
        .lbox a.first{
            background:#97C8FD;
        }
        .desw{
            margin-right: 10px;
        }
    </style>
</head>
<body>
<h2>后台管理界面</h2>
    <div class="box">
        <div class="lbox">
            <a href="/frticle">banner管理</a>
            <a href="/grticle" class="first">company管理</a>
            <a href="/hrticle">简介管理</a>
            <a href="/irticle">用户信息管理</a>
            <a href="/jrticle">管理员管理</a>
            <a href="/krticle">news管理</a>

        </div>
        <div class="rbox">
            <div class="new">
                <form>
                    标题：<input type="text" class="titles" />
                </form>
                <script type="text/plain" id="myEditor" style="width:1000px;height:240px;">
                    <p>新闻内容</p>
                </script>
                <div id="btns">
                    <table>
                        <tr>
                            <td>
                                <button class="btn" onclick="getPlainTxt()">提交</button>&nbsp;
                            </td>
                        </tr>

                    </table>
                </div>
                <ul>
                    <% for(var i=0;i<company.length;i++){ %>
                        <li><input type="button" value="删除" class="desw" /><u class="tit"><%= company[i].title %></u> <span><%= company[i].time %></span></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>

<div class="clear"></div>

<div>
    <h3 id="focush2"></h3>
</div>
<script type="text/javascript">
    //实例化编辑器
    var um = UM.getEditor('myEditor');
    um.addListener('focus',function(){
        $('#focush2').html('')
    });
    //按钮的操作
    function getPlainTxt() {
        var de = new Date().getTime();
        console.log(de);
        $.ajax({
            url: '/comp',
            type: 'POST',
            dataType: 'JSON',
            data: {title: $('.titles').val(),cont:UM.getEditor('myEditor').getPlainTxt(),date:de},
            success:function(data){
                if(data.ok == true){
                    window.location.reload();
                    alert('提交成功');
                }
            }
        });
        // var arr = [];
        // arr.push(UM.getEditor('myEditor').getPlainTxt());
        // alert(arr.join('\n'))
    }
    //删除按钮
    $('.desw').click(function(){
        var datas = $(this).siblings('.tit').text();
        $.ajax({
            url: '/desw',
            type: 'POST',
            dataType: 'JSON',
            data: {datas: datas},
            success:function(data){
                if(data.ok == true){
                    window.location.reload();
                    alert('删除成功')
                }
            }
        });
    })
</script>

</body>
</html>